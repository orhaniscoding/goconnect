# =============================================================================
# GoConnect Environment Configuration
# =============================================================================
# Copy this file to .env and customize the values.
# =============================================================================

# -----------------------------------------------------------------------------
# Core Server
# -----------------------------------------------------------------------------
ENVIRONMENT=development
SERVER_PORT=8081

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DB_NAME=goconnect
DB_USER=goconnect
DB_PASSWORD=goconnect_secret
DB_SSLMODE=disable

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# IMPORTANT: Change this to a secure random string in production!
JWT_SECRET=change-me-in-production-minimum-32-chars
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=168h

# -----------------------------------------------------------------------------
# WireGuard VPN
# -----------------------------------------------------------------------------
WG_INTERFACE_NAME=wg0
WG_SERVER_ENDPOINT=vpn.example.com:51820
WG_SERVER_PUBKEY=OW1KlbS/keHDAAT7ps27ReCM5B4obISu7bV9uD2y3Rk=
WG_PRIVATE_KEY=
WG_DNS=1.1.1.1,1.0.0.1

# -----------------------------------------------------------------------------
# TURN Server (NAT Traversal)
# -----------------------------------------------------------------------------
# Secret for time-limited TURN credentials (HMAC-SHA1)
# IMPORTANT: Change this to a secure random string in production!
TURN_SECRET=change-me-in-production

# TURN realm (typically your domain)
TURN_REALM=goconnect.io

# External/public IP address of your TURN server
# Required when running behind NAT. Leave empty for local development.
TURN_EXTERNAL_IP=

# TURN server URL (for clients to connect)
# Format: turn:hostname:port or turns:hostname:port (TLS)
TURN_SERVER_URL=turn:localhost:3478

# TURN listening ports
TURN_PORT=3478
TURN_TLS_PORT=5349

# -----------------------------------------------------------------------------
# OIDC / SSO (Optional)
# -----------------------------------------------------------------------------
OIDC_ISSUER=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_REDIRECT_URL=

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000
